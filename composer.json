{
    "name": "atelierspierrot/templatengine",
    "type": "framework",
    "description": "A PHP package to build HTML5 views (based on HTML5 Boilerplate layouts).",
    "keywords": [ "php", "template", "boilerplate" ],
    "homepage": "https://github.com/atelierspierrot/templatengine",
    "version": "0.0.7",
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "Les Ateliers Pierrot & contributors",
            "email": "contact@ateliers-pierrot.fr",
            "homepage": "http://www.ateliers-pierrot.fr/"
        },{
            "name": "Pierre Cassat",
            "email": "piero.wbmstr@gmail.com",
            "homepage": "https://github.com/PieroWbmstr"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "psr/log": "dev-master",
        "atelierspierrot/patterns": "dev-master",
        "atelierspierrot/library": "dev-master"
    },
    "require-dev": { "sami/sami": "dev-master" },
    "autoload": { "psr-0": {
        "TemplateEngine": "src",
        "Assets": "src"
    } },
    "extra": {
        "assets": "www",
        "assets_vendor": "vendor",
        "document_root": "www",
        "views": [ "www", "www/html5boilerplate" ],
        "views_functions": "src/TemplateEngine/view_functions.php",
        "assets_presets": {
            "jquery.tablesorter": {
                "css": "vendor_assets/blue/style.css",
                "jsfiles_footer": [ "vendor_assets/jquery.metadata.js", "min:vendor_assets/jquery.tablesorter.min.js" ]
            },
            "jquery.highlight": {
                "css": "vendor_assets/jquery.highlight.css",
                "jsfiles_footer": "vendor_assets/jquery.highlight.js"
            }
        }
    },
    "scripts": { "post-autoload-dump": "Assets\\ComposerInstaller::postAutoloadDump" }
}
