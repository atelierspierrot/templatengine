{
    "name": "atelierspierrot/templatengine",
    "type": "framework",
    "description": "A PHP package to build HTML5 views (based on HTML5 Boilerplate layouts).",
    "keywords": [ "php", "template", "boilerplate" ],
    "homepage": "https://github.com/atelierspierrot/templatengine",
    "version": "0.0.2-dev",
    "license": "GPL-3.0",
    "authors": [{
            "name": "Pierre Cassat",
            "email": "piero.wbmstr@gmail.com",
            "homepage": "https://github.com/PieroWbmstr"
    }],
    "require": {
        "php": ">=5.3.0",
        "atelierspierrot/patterns": "dev-master",
        "atelierspierrot/library": "dev-master"
    },
    "require-dev": { "sami/sami": "dev-master" },
    "autoload": { "psr-0": {
        "TemplateEngine": "src",
        "Assets": "src"
    } },
    "extra": {
        "assets": "www",
        "document_root": "www",
        "views": "www/html5boilerplate"
    },
    "scripts": {
        "post-autoload-dump": "Assets\\ComposerInstaller::postAutoloadDump"
    }
}
